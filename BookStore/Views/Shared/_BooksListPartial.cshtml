@model BooksListViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<input type="hidden" id="search-text" asp-for="Search" />
<input type="hidden" id="category-id" asp-for="CategoryId" />
<input type="hidden" id="author-id" asp-for="AuthorId" />
<input type="hidden" id="rate-id" asp-for="Rate" />
@if (Model.Books.Count() == 0)
{
    <h3 class="text-center text-info mb-3">Your search - <b>@Model.Search</b> - did not match any books title.</h3>
}
else
{
    <div class="books-container d-flex justify-content-between flex-wrap">
        <partial name="_BooksPartial" model="Model.Books" />
    </div>
    @if (Model.PageCount > 1)
    {
        <div class="pagination-container">
            <partial name="_PaginationPartial" model="Model" />
        </div>
    }
}