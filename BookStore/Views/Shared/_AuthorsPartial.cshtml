*@
<div class="d-flex flex-column flex-wrap w-100 mt-3" style="height: 300px; overflow-x: scroll;">
    @foreach (var author in Model.Authors)
    {
        <div class="authors-search">
            <input type="checkbox" value="@author.Id" name="authors"
                   @(Model.AuthorsId.Any(a => a == author.Id) ? "checked" : null) id="chbAuthor-@author.Id" />
            <label for="chbAuthor-@author.Id">@author.Fullname</label>
        </div>
    }
</div>

