@model IEnumerable<Comment>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

@foreach (var comment in Model)
{
    <div class="card w-100 mb-3">
        <div class="card-body row">
            <div class="col-sm-2 rounded-circle overflow-hidden border" style="height: 120px;">
                <img src="@(comment.User.Image ?? "/images/no-image.png")" class="img-fluid position-absolute" 
                            style="top: 50%; left: 50%; transform: translate(-50%, -50%);"/>
            </div>
            <div class="col-sm-10">
                <h5 class="card-title">@comment.User.UserName</h5>
                <p class="card-text">@comment.Content</p>
                <p class="text-muted small position-absolute" style="bottom: 0px;">@comment.PublishAt.ToString()</p>
            </div>
        </div>
    </div>
}