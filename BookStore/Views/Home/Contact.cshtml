@model ContactViewModel
@{
    ViewData["Title"] = "Contact";
}

@section styles{
    <partial name="_BackgroundImageStylesPartial" model="Model.Banner" />
    <style>
        iframe {
            width: 100%;
            height: 400px;
        }
    </style>
}

@*banner section start*@
<div class="row" id="background-img"></div>
@*banner section end*@

<div class="row mb-4">
    <div class="col-sm-6 mb-3">
        <h2>@ViewData["Title"]</h2>
        <h3>@ViewData["Message"]</h3>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="ui form">
                <div class="fields">
                    <div class="field">
                        <label asp-for="Contact.Firstname"></label>
                        <input type="text" value="@(Model.User != null ? Model.User.Firstname : "")" asp-for="Contact.Firstname" placeholder="First Name">
                        <span asp-validation-for="Contact.Firstname" class="text-danger"></span>
                    </div>
                    <div class="field">
                        <label asp-for="Contact.Lastname"></label>
                        <input type="text" value="@(Model.User != null ? Model.User.Lastname : "")" asp-for="Contact.Lastname" placeholder="Last Name">
                        <span asp-validation-for="Contact.Lastname" class="text-danger"></span>

                    </div>
                    <div class="field">
                        <label asp-for="Contact.Email"></label>
                        <input type="text" value="@(Model.User != null ? Model.User.Email : "")" asp-for="Contact.Email" placeholder="Email">
                        <span asp-validation-for="Contact.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="ui form">
                    <div class="field">
                        <label asp-for="Contact.Message"></label>
                        <textarea rows="2" asp-for="Contact.Message" style="margin-top: 0px; margin-bottom: 0px; height: 220px;"></textarea>
                        <span asp-validation-for="Contact.Message" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <input type="submit" value="Send" class="btn btn-outline-success mt-3 float-right" />
        </form>
    </div>
    <div class="col-sm-6">
        <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d12157.63105803908!2d49.8513047!3d40.3776544!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xc20aa51a5f0b5e01!2sCode+Academy!5e0!3m2!1sen!2s!4v1557671066102!5m2!1sen!2s" frameborder="0" style="border:0" allowfullscreen></iframe>
    </div>
</div>

@section scripts{
    <partial name="_ValidationScriptsPartial" />
    @if (Model.IsSent)
    {
        <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
        <script>
            $(document).ready(function () {
                swal("Message was sent.", "", { icon: "success" });
            })
        </script>
    }
}