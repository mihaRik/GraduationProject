@model Author
@{
    ViewData["Title"] = "Add author";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Add new one author</h2>

<div class="row">
    <div class="col-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Fullname"></label>
                <input type="text" asp-for="Fullname" class="form-control" />
                <span asp-validation-for="Fullname" class="text-danger"></span>
            </div>
            <input type="submit" value="Add" class="btn btn-outline-success"/>
            <a asp-area="Admin" asp-controller="Author" asp-action="Index" class="btn btn-outline-primary">Back to the menu</a>
        </form>
    </div>
</div>